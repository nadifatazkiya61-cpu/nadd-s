/* ===== CSS: SweetCrumbs (white + gray theme) ===== */
:root{
  --bg:#ffffff;
  --bg-2:#f6f7f9;
  --ink:#212529;
  --muted:#6c757d;
  --brand:#2f3542;
  --accent:#111827;
  --soft:#e5e7eb;
  --shadow:0 12px 34px rgba(0,0,0,.12);
  --radius:18px;
}
*{box-sizing:border-box}
html,body{margin:0;padding:0}
body{
  font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Arial, sans-serif;
  color:var(--ink);
  background:var(--bg);
}

/* Topbar */
.topbar{
  position:sticky;top:0;z-index:50;
  background: rgba(255,255,255,.85);
  backdrop-filter: blur(10px);
  border-bottom:1px solid var(--soft);
}
.wrap{max-width:1200px;margin:auto;padding:14px 20px;display:flex;align-items:center;gap:18px}
.brand{display:flex;align-items:center;gap:12px;text-decoration:none;color:inherit}
.logo{width:40px;height:40px;border-radius:12px;background:var(--bg-2);display:grid;place-items:center;font-size:22px;box-shadow: var(--shadow)}
.brand-text strong{display:block;line-height:1}
.brand-text span{font-size:.8rem;color:var(--muted)}

.nav{margin-left:auto;display:flex;gap:18px}
.nav a{color:var(--ink);text-decoration:none;font-weight:600;opacity:.85}
.nav a:hover{opacity:1}

.actions{display:flex;gap:10px}
.icon-btn,.cart-btn{border:1px solid var(--soft);background:var(--bg);border-radius:12px;padding:10px 12px;cursor:pointer}
.cart-btn{display:flex;align-items:center;gap:8px;font-weight:700}
.count{background:var(--ink);color:#fff;border-radius:999px;padding:2px 8px;font-size:.75rem}

/* Hero Slider */
.hero{position:relative}
.slider{position:relative;height:72vh;min-height:420px;overflow:hidden;border-bottom:1px solid var(--soft)}
.slides{height:100%;display:flex;transition: transform .6s cubic-bezier(.22,.61,.36,1)}
.slide{position:relative;min-width:100%;height:100%;display:grid;place-items:center;color:#fff}
.slide::before{
  content:"";position:absolute;inset:0; background-image:var(--bg);
  background-size:cover;background-position:center;
  filter:brightness(.6);
}
.slide-content{position:relative;text-align:center;max-width:760px;padding:0 20px;animation:fadeUp .8s ease both}
.slide h1{font-size:clamp(28px,5vw,56px);margin:.2em 0}
.slide p{opacity:.95}
.btn{display:inline-block;border:1px solid var(--soft);padding:12px 16px;border-radius:12px;text-decoration:none;color:var(--ink);background:#fff}
.btn.primary{background:#111827;color:#fff;border-color:#111827}
.btn.ghost{background:transparent}

.slider-ui{position:absolute;inset:0;display:flex;align-items:center;justify-content:space-between;padding:0 8px}
.nav{border:none;background:rgba(255,255,255,.6);backdrop-filter: blur(4px);width:42px;height:42px;border-radius:50%;cursor:pointer;font-size:22px}
.dots{position:absolute;left:50%;bottom:16px;transform:translateX(-50%);display:flex;gap:8px}
.dots button{width:10px;height:10px;border-radius:50%;border:1px solid #fff;background:transparent;opacity:.7;cursor:pointer}
.dots button.is-active{background:#fff;opacity:1}

/* USPs */
.usp{display:grid;grid-template-columns:repeat(4,1fr);gap:10px;max-width:1100px;margin:-36px auto 0;padding:0 20px}
.usp-item{background:var(--bg-2);border:1px solid var(--soft);padding:12px 14px;border-radius:12px;text-align:center;font-weight:700;box-shadow: var(--shadow)}

/* Sections */
.section{padding:56px 0}
.section.alt{background:var(--bg-2)}
.section .title{font-size:clamp(22px,3.2vw,34px);margin:0}
.section .filters{display:flex;gap:10px;flex-wrap:wrap;margin-left:auto}
.section-head{display:flex;align-items:center;gap:16px;justify-content:space-between;max-width:1200px;margin:0 auto 18px;padding:0 20px}
.select{border:1px solid var(--soft);background:var(--bg);padding:10px 12px;border-radius:12px}

/* Chips */
.chip{border:1px solid var(--soft);background:var(--bg);padding:8px 12px;border-radius:999px;cursor:pointer}
.chip.is-active{background:#111827;color:#fff;border-color:#111827}

/* Grid Cards */
.grid{max-width:1200px;margin:0 auto;padding:0 20px;display:grid;grid-template-columns:repeat(12,1fr);gap:18px}
@media (max-width:1100px){.grid{grid-template-columns:repeat(8,1fr)}}
@media (max-width:720px){.grid{grid-template-columns:repeat(4,1fr)}}
.card{grid-column: span 4;background:var(--bg);border:1px solid var(--soft);border-radius:var(--radius);overflow:hidden;box-shadow: var(--shadow);transition: transform .25s ease}
@media (max-width:1100px){.card{grid-column: span 4}}
@media (max-width:720px){.card{grid-column: span 4}}
.card:hover{transform:translateY(-6px)}
.thumb{height:190px;background:#ddd;overflow:hidden}
.thumb img{width:100%;height:100%;object-fit:cover;transform:scale(1.03);transition:transform .35s ease}
.card:hover .thumb img{transform:scale(1.08)}
.content{padding:14px}
.meta{display:flex;justify-content:space-between;align-items:center;color:var(--muted)}
.title{margin:.2em 0}
.price{font-weight:800}
.badge{display:inline-block;background:#111827;color:#fff;border-radius:999px;font-size:.72rem;padding:4px 8px}
.tag{background:var(--bg-2);border:1px solid var(--soft);border-radius:999px;font-size:.72rem;padding:2px 8px}
.actions{display:flex;gap:10px;margin-top:10px}
.btn.small{padding:8px 10px;font-size:.9rem}

/* Roulette */
.roulette{display:grid;place-items:center}
.roulette-card{display:grid;grid-template-columns:320px 1fr;gap:16px;max-width:880px;background:var(--bg);border:1px solid var(--soft);border-radius:var(--radius);box-shadow: var(--shadow);overflow:hidden}
.roulette-card img{width:100%;height:100%;object-fit:cover}
.rc-body{padding:16px}
.rc-price{font-weight:800;margin:.4em 0}
.rc-actions{display:flex;gap:10px;margin-top:10px}

/* Why cards */
.why-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:16px}
@media (max-width:960px){.why-grid{grid-template-columns:repeat(2,1fr)}}
@media (max-width:560px){.why-grid{grid-template-columns:1fr}}
.why-card{background:var(--bg);border:1px solid var(--soft);border-radius:14px;padding:16px;box-shadow: var(--shadow)}

/* Testi */
.marquee{overflow:hidden;border:1px solid var(--soft);background:var(--bg);border-radius:12px}
.track{display:flex;gap:36px;padding:12px;white-space:nowrap;animation:marq 18s linear infinite}
.track span{opacity:.9}
@keyframes marq{to{transform:translateX(-50%)}}

/* Footer */
.footer{border-top:1px solid var(--soft);background:var(--bg)}
.footer .wrap{justify-content:space-between;align-items:center}
.foot-brand{display:flex;align-items:center;gap:12px}
.foot-links a{margin-right:14px;color:inherit;text-decoration:none}
.hint{display:block;color:var(--muted);margin-top:8px}

/* Cart panel */
.cart-dim{position:fixed;inset:0;background:rgba(0,0,0,.35);opacity:0;pointer-events:none;transition:opacity .25s ease}
.cart-panel{position:fixed;top:0;right:-420px;width:420px;max-width:92vw;height:100dvh;background:var(--bg);border-left:1px solid var(--soft);box-shadow: var(--shadow);display:flex;flex-direction:column;transition:right .3s ease}
.cart-head{padding:14px 16px;border-bottom:1px solid var(--soft);display:flex;align-items:center;gap:10px}
.cart-body{flex:1;overflow:auto;padding:10px}
.cart-foot{padding:14px 16px;border-top:1px solid var(--soft)}
.sum>div{display:flex;justify-content:space-between;margin:6px 0}
.total{font-size:1.1rem}

/* Search overlay */
.search-overlay{position:fixed;inset:0;background:rgba(255,255,255,.9);backdrop-filter: blur(6px);display:none;align-items:center;justify-content:center;padding:20px}
.search-overlay.show{display:flex}
.search-box{display:flex;gap:10px;background:#fff;border:1px solid var(--soft);border-radius:12px;padding:10px;box-shadow: var(--shadow);width:min(720px,92vw)}
.search-box input{flex:1;border:none;outline:none;font-size:1rem}

/* Reveals */
.reveal{opacity:0;transform:translateY(10px)}
.reveal.revealed{opacity:1;transform:none;transition:all .6s ease}

/* Animations */
@keyframes fadeUp{from{opacity:0;transform:translateY(10px)}to{opacity:1;transform:none}}
